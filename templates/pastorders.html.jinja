<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Past Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="shortcut icon" href="/static/favicon.ico" type="image/x-icon">
  </head>
  <body>

    {% include "components/navbar.html.jinja"%}
    <h1 class="text-center my-3">Past Orders</h1>


    <main class="container table-responsive-sm">
    {%for item in products%}
    <div class="card my-2">
        <h5 class="card-header">Order #{{item['id']}} </h5>
        <div class="card-body">
            <h5 class="card-title">Status: {{item['status']}} </h5>
            <p class="card-text">Date Purchased: {{item['timestamp'].strftime('%Y-%m-%d')}}</p>
            <a href="/pastorders/{{item['id']}}" class="btn btn-primary">See Books</a>
        </div>
    </div>
    {%endfor%}
    </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>