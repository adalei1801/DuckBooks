<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}
    <h1>Cart</h1>

      <main class="container">
       <table class="table">
          <thead>
            <tr class="fs-3">
              <th scope="col">Image</th>
              <th scope="col">Title</th>
              <th scope="col">Author</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th>Total</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
          {% for item in products %}
            <tr class="fs-4">
              <td><img src="{{item['image']}}" alt="{{item['title']}}" width="100"> </td>
              <td>{{item['title']}}</td>
              <td>{{item['author']}}</td>
              <td>
              <input type="number" class="form-control" id="quantity" name="quantity" min="1" max="30" value="{{item['quantity']}}">
              </td>
              <td>{{item['price']}}</td>
              <td>{{ item['price'] * item['quantity'] }}</td>
              <td> <button class="btn btn-primary btn-lg"><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="21" height="21"><path d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z" stroke="currentColor"></path></svg></td>
              <td><button class="btn btn-danger btn-lg"><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="21" height="21"><path d="M1.5 1.5l12 12m-12 0l12-12" stroke="currentColor"></path></svg></button></td>

            </tr>
          {%endfor%}
          </tbody>
        </table>
        </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>