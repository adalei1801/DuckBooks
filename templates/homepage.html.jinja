<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Books for Ducks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/styles.css">

  <link rel="shortcut icon" href="/static/favicon.ico" type="image/x-icon">
</head>

<body>
  {% include "components/navbar.html.jinja"%}
  <h1 class="text-center my-2 fs-1">Welcome to the Pond</h1>

  <main class="container">

    <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/static/duck_pond.png" class="d-block w-100" alt="ducks swimming along">
    </div>
    <div class="carousel-item">
      <img src="/static/river_books.png" class="d-block w-100" alt="books floating down a river">
    </div>
    <div class="carousel-item">
      <img src="/static/reading_for_all.png" class="d-block w-100" alt="A girl reads to a group of kids while some ducks are nearby">
    </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
    </button>
    </div>

    <h2 class="my-3">Dystopia</h2>
    <section class="row flex-nowrap overflow-auto">
      {%for item in products_dystopia%}
      <div class="col-6 col-md-4 col-lg-2">
        <div class="card">
          <img src="{{item['image']}}" class="card-img-top" alt="{{item['title']}}">
          <div class="card-body">
            <h5 class="card-title">{{item['title']}}</h5>
            <h6 class="card-title">{{item['author']}}</h6>
            <p class="card-text">${{"%.2f" | format(item['price'])}}</p>
            <a href="/product/{{item['id']}}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </div>
      {%endfor%}
    </section>


    <h2 class="my-3">Fiction</h2>
    <section class="row flex-nowrap overflow-auto">
      {%for item in products_fiction%}
      <div class="col-6 col-md-4 col-lg-2">
        <div class="card">
          <img src="{{item['image']}}" class="card-img-top" alt="{{item['title']}}">
          <div class="card-body">
            <h5 class="card-title">{{item['title']}}</h5>
            <h6 class="card-title">{{item['author']}}</h6>
            <p class="card-text">${{"%.2f" | format(item['price'])}}</p>
            <a href="/product/{{item['id']}}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </div>
      {%endfor%}
    </section>


    <h2 class="my-3">Short Reads</h2>
    <section class="row flex-nowrap overflow-auto">
      {%for item in products_short%}
      <div class="col-6 col-md-4 col-lg-2">
        <div class="card">
          <img src="{{item['image']}}" class="card-img-top" alt="{{item['title']}}">
          <div class="card-body">
            <h5 class="card-title">{{item['title']}}</h5>
            <h6 class="card-title">{{item['author']}}</h6>
            <p class="card-text">${{"%.2f" | format(item['price'])}}</p>
            <a href="/product/{{item['id']}}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </div>
      {%endfor%}
    </section>

  </main>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>